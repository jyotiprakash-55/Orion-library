
@{
    ViewBag.Title = "_LayoutViewForDashboard";
    
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/PagedList.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>
    <header>
        <nav class="navbar bg-info ">
            <div class="container-fluid bg-info ">
                <img src="~/Content/images/orion.jpg" style="height:70px;width:90px;">
                <div class="col-md-7 offset-md-3">
                    <h3>ORION LIBRARY</h3>
                </div>
                <a class="btn btn-dark" href="@Url.Action("LogOut","Account")" role="button">Logout</a>
            </div>
        </nav>
    </header>
    <div class="container-fluid body-content">
        @RenderBody()
    </div>
    <script src="~/Scripts/jquery-3.6.3.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("validation", false)
</body>
</html>
